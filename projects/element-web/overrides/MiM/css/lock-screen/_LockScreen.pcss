.mim_LockScreen_Container {
    width: 100vw;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;

    & .mim_LockScreen_Content {
        transform: scale(1.25);
        display: flex;
        flex-direction: column;
        align-items: center;
    }
}

.mim_LockScreen_AttemptsWarning {
    text-align: center;
    color: var(--cpd-color-icon-critical-primary);
}
